<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.msgs.each do |msgs| %>
      <% msgs.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>

