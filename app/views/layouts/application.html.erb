<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="fixed">
      <nav class="top-bar">
        <ul class="title-area">
          <li class="name">
            <h1><%= link_to "R.A.T.", '/' %></a></h1>
          </li>
        </ul>
        <section class="top-bar-section">
          <ul class="right">
            <% if user_signed_in? %>
              <li class="divider"></li>
              <li><%= link_to "Agenda", agenda_path %></li>
            <% end %>
            <% if user_signed_in? %>
              <li class="divider"></li>
              <li><%= link_to "Overdue", overdue_path %></li>
            <% end %>
            <% if user_signed_in? %>
              <li class="divider"></li>
              <li><%= link_to "Tasks", tasks_path %></li>
            <% end %>  
            <% if user_signed_in? && current_user.admin? %>
              <li class="divider"></li>
              <li class="has-dropdown">
                <a href="#">Admin</a>
                <ul class="dropdown">
                  <li><%= link_to "Companies", companies_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Categories", categories_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Users', admin_show_users_path %></li>
                </ul>
              </li>
            <% end %>  
            <% if user_signed_in? %>
              <li class="divider"></li>
              <li><%= link_to 'Change password', change_password_path %></li>
              <li><%= link_to "Sign Out (#{current_user.full_name})", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign In", user_session_path %></li>
            <% end %>
          </ul>
        </section>
      </nav>
      <% if content_for? :crumbs %>
        <ul class="breadcrumbs">
          <li><%= content_for :crumbs %>
        </ul>
      <% end %>
    </div> 
    <div class="panel" style="background: white">
      <% if notice %>
      <p class="notice"><div class="alert-box success round"><%= notice %></div></p>
      <%end%>
      <% if alert %>
      <p class="alert"><div class="alert-box alert round"><%= alert %></div></p>
      <%end%>

      <div id="main-content"> <%= yield %> </div>
    </div>

    <!-- <script type='text/javascript'> -->
    <!--   var CKEDITOR_BASEPATH = '/assets/ckeditor/'; -->
    <!-- </script> -->
    <%= javascript_include_tag "application" %>
    <div id="status-message"></div>
    <div id="status-message-error"></div>
  </body>
</html>
