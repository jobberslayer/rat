<div id="scheduler-<%=task.id%>" style="display:none">
  <label>
    <%= f.radio_button :kind, :none %> None
  </label>

  <label>
    <%= f.radio_button :kind, :once %> Once on
    <div class="large-4">
      <%= f.date_select( :once_date, order: [:year, :month, :day]) %>
    </div>
  </label>

  <label>
    <%= f.radio_button :kind, :yearly %> Yearly on
    <div class="large-4">
      <%= f.date_select( :yearly_date, order: [:month, :day]) %>
    </div>
  </label>

  <label>
    <%= f.radio_button :kind, :monthly %> Monthly on 
    <div class="large-4">
      <%= f.select( :monthly_day, (1..31)) %>
    </div>
  </label>

  <label>
    <%= f.radio_button :kind, :first_day_month %> First Day of the Month
  </label>

  <label>
    <%= f.radio_button :kind, :last_day_month %> Last Day of the Month
  </label>
</div>
