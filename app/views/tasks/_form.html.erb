<% @remote = @parent.nil? ? false: true %>
<div class="panel callout">
<%= form_for(@task, remote: @remote) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !@task.new_record? || !@parent.nil? %>
    <% if @parent %>
      <%= f.hidden_field :child_of_id, value: @parent.id %>
      <%= f.hidden_field :company_id, value: @parent.company_id %>
      <%= f.hidden_field :category_id, value: @parent.category_id %>
    <% else %>
      <%= f.hidden_field :company_id, value: @task.company_id %>
      <%= f.hidden_field :category_id, value: @task.category_id %>
    <%end%>
  <% else %>
    <div class="large-4">
      <div class="field">
        <%= f.label :company %>
        <%= f.collection_select :company_id, Company.order(:name), :id, :name %>
      </div>
    </div>
    <div class="large-4">
      <div class="field">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
      </div>
    </div>
  <% end %>

  <div class="large-4">
    <div class="field">
      <%= f.label :user %>
      <%= f.collection_select :user_id, User.order(:last_name, :first_name), :id, :full_name %>
    </div>
  </div>

  <div class="large-4">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="large-12">
    <div class="field">
      <%= f.label :info %><br />
      <%= f.cktext_area :info %>
    </div>
  </div>

  <div id="scheduler">
    <%= link_to('#', onclick: "toggle_tree('#scheduler-#{@task.id}', '#task-toggle-#{@task.id}')") do %>
          <span id="task-toggle-<%=@task.id%>" class="ui-icon ui-icon-triangle-1-e left") ></span>Scheduler
        <% end %>
    <%= f.fields_for :schedule do |build| %>
      <%= render('scheduler', f: build, task: @task, ) %>
    <% end %>
  </div>
  <br/>

  <div class="large-4">
    <div class="actions">
      <%= f.submit :class => 'button round' %>
      <% if @task.new_record? && @parent.nil?%>
      <% elsif @task.new_record? %>
        <%= button_to_function 'Cancel', raw('$("#new-subtask").empty(); $("#new-subtask-link").show();', 
            :class => 'button round') %>
      <% else %>
        <%= button_to_function 'Cancel', raw('$("#task-' + @task.id.to_s + '").empty().append("' + j(render('show_task', task: @task)) + '")'), :class => 'button round' %>
      <% end %>
    </div>
  </div>
<% end %>
</div>